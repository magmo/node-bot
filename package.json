{
  "name": "koa-typescript-json-api",
  "version": "0.0.1",
  "description": "hub prototype",
  "main": "index.ts",
  "scripts": {
    "db:drop": "dropdb server_wallet_${NODE_ENV}",
    "db:create": "createdb server_wallet_${NODE_ENV}",
    "db:migrate": "npx knex migrate:latest",
    "db:rollback": "npx knex migrate:rollback",
    "db:seed": "npx knex seed:run",
    "test": "SERVER_WALLET_DB_NAME=server_wallet_test npx jest --runInBand",
    "watch-server": "SERVER_WALLET_DB_NAME=server_wallet_development nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/app/server.ts",
    "build": "npx tsc",
    "start": "node ./lib/app/server.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^6.2.0",
    "dotenv-expand": "^4.2.0",
    "fmg-core": "^0.5.6",
    "fmg-nitro-adjudicator": "^0.0.10",
    "knex": "^0.13.0",
    "koa": "^2.7.0",
    "koa-body": "^4.0.8",
    "koa-router": "^7.4.0",
    "objection": "^1.6.0",
    "pg": "^7.1.2"
  },
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.6",
    "@types/knex": "^0.15.2",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.39",
    "@types/supertest": "^2.0.7",
    "babel-register": "^6.26.0",
    "ganache-cli": "^6.3.0",
    "jest": "^24.0.6",
    "koa-bodyparser": "^4.2.1",
    "magmo-devtools": "git+https://github.com/magmo/devtools.git#v0.1.8",
    "nodemon": "^1.18.10",
    "supertest": "^3.4.2",
    "truffle": "^5.0.0-beta.2",
    "truffle-hdwallet-provider": "^1.0.4",
    "ts-jest": "^24",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.0.2",
    "tslint-config": "^0.0.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [],
    "setupFilesAfterEnv": [
      "./src/config/knexSetupTeardown.ts"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)(spec|test).ts"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    }
  }
}
